<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
      "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">


<hibernate-mapping>

	<class name="allgemein.model.Angestellter" table="angestellter">

		<id name="angestellter_ID" column="Angesteller_ID" type="int">
			<generator class="native" />
		</id>

		<property name="name" column="Name" not-null="true" type="string" />

		<property name="passwort" column="Passwort" not-null="true"
			type="string" />
			
		<property name="passwort_datum" column="Passwort_Datum" not-null="true"
			type="date" />

		<property name="rechteAdmin" column="Rechte_Admin" not-null="true"
			type="boolean" />
			
		<property name="standort" column="Standort_Name" not-null="true">
			<type name="org.hibernate.type.EnumType">
				<param name="enumClass">allgemein.model.StandortEnum</param>
			</type>
		</property>

	</class>
</hibernate-mapping>